<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4C504C"
    tools:context=".MainActivity">

    <Button
        android:onClick="materialDialog"
        android:id="@+id/btnStandard"
        android:layout_width="200dp"
        android:background="#353333"
        android:layout_height="wrap_content"
        android:text="Standard"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btnAnimated"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:onClick="bottomSheetMaterialDialog"
        android:id="@+id/btnAnimated"
        android:layout_width="200dp"
        android:background="#353333"
        android:textColor="#FFFFFF"
        android:layout_height="wrap_content"
        android:text="Animated"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>